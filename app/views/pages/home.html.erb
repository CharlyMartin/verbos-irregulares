<!-- NOT DISPLAYED -->
<% link_to root_path do %>
  <div class="link-pdf">
    <p class="link">Descargar tu lista completa gratuitamente (PDF)</p>
  </div>
<% end %>
<!-- END -->


<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12">

      <table>
        <thead>
          <tr>
            <th>Infinitivo</th>
            <th>Pasado Simple</th>
            <th>Pasado Participio</th>
            <th>Traducción</th>
          </tr>
        </thead>
        <tbody>
          <% @verbs.each do |verb| %>
            <tr>
              <td> <%= verb.infinitive %> </td>
              <td> <%= verb.simple_past %> </td>
              <td> <%= verb.past_participle %> </td>
              <td> <%= verb.translation %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
