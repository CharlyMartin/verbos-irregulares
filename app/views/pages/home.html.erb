<div class="home" style="background-image: linear-gradient(-225deg, rgba(32, 164, 243, 0.3) 0%, rgba(252, 138, 0, 0.3) 50%), url(<%= asset_path 'home.jpg' %>);">
  <div class='text-container'>
    <h1 class="tagline">Aprende sus verbos irregulares en ingles sin problema</h1>
    <%= link_to 'Descargar tu lista completa (PDF)', root_path, class: 'home-button' %>
  </div>
</div>

<!-- NOT DISPLAYED -->
<% link_to root_path do %>
  <div class="link-pdf">
    <p class="link">Descargar tu lista completa gratuitamente (PDF)</p>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12">

      <table>
        <thead>
          <tr>
            <th>Infinitivo</th>
            <th>Preterito</th>
            <th>Participo</th>
            <th>Traduccion</th>
          </tr>
        </thead>
        <tbody>
          <% @verbs.each do |verb| %>
            <tr>
              <td> <%= verb.infinitive %> </td>
              <td> <%= verb.simple_past %> </td>
              <td> <%= verb.past_participle %> </td>
              <td> <%= verb.translation %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>


